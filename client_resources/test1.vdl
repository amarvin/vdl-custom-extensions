<vdl version="4.1">

    <vdl-include src="includes/vdl-toolbar.vdl"></vdl-include>
    <vdl-include src="includes/vdl-dropdown.vdl"></vdl-include>

    <style>
        .fico-tiles.box1 {
            height: 120px;
            position: relative;
        }

        .fico-tiles.box2 {
            height: 120px;
            position: relative;

        }
    </style>

    <vdl-page>
        <vdl-section>
            <vdl-row>
                <vdl-column size="12">
                    <vdl-toolbar heading="A VDL Toolbar">
                        <button class="btn"><img src="gfx/lock.svg" alt="Locked"></button>
                        <button class="btn btn-primary">Other</button>
                    </vdl-toolbar>
                </vdl-column>
            </vdl-row>

            <vdl-row>
                <vdl-column size="12" heading="Tiles">
                    <div class="col-xs-12 col-sm-8 col-md-5 col-lg-8 boxContainer">
                        <div id="column1">
                            <div class="fico-tiles box1">
                                <h4>AAA</h4>
                            </div>
                            <div class="fico-tiles box2">
                                <h4>BBB</h4>
                            </div>
                        </div>
                    </div>
                </vdl-column>
            </vdl-row>

        </vdl-section>

        <vdl-section heading="Buttons">
            <vdl-row>
                <vdl-column size="12">
                    <button class="btn"><img src="gfx/lock.svg" alt="Locked"></button>
                </vdl-column>
            </vdl-row>
        </vdl-section>

        <vdl-section>
            <vdl-row>
                <i class="fico-dots-three-horizontal"></i>
            </vdl-row>
            <vdl-row>

                <vdl-dropdown-button title="Dropdown Button">
                    <li><a href="#">Action</a></li>
                    <li><a href="#">Another action</a></li>
                    <li><a href="#">Something else here</a></li>
                    <li class="divider"></li>
                    <li><a href="#">Separated link</a></li>
                </vdl-dropdown-button>

            </vdl-row>
        </vdl-section>

    </vdl-page>
</vdl>